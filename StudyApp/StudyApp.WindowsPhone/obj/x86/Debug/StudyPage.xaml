<Page
    x:Class="StudyApp.StudyPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:StudyApp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Page.Background>
        <ImageBrush Stretch="Fill" ImageSource="Images/Background.jpg"/>
    </Page.Background>

    <Grid Margin="0,-26.667,0,-0.333">
        <Grid.Background>
            <ImageBrush Stretch="Fill" ImageSource="Images/Background.jpg"/>
        </Grid.Background>
        <StackPanel HorizontalAlignment="Left" Height="562" VerticalAlignment="Top" Width="380" Margin="10,90,0,0">
            <TextBlock TextWrapping="Wrap" Text="Please select the subject you want to study:" Margin="10,0,14,0" Height="52" FontSize="20"/>
            <ComboBox x:Name="cmbSubjects" Margin="10,0" Height="53"/>
            <TextBlock x:Name="txtStartTime" HorizontalAlignment="Left" Margin="10,0,0,0" TextWrapping="Wrap" Text="Start Time:" VerticalAlignment="Top" Width="353" Height="28" FontSize="20"/>
            <TimePicker x:Name="tmpStart" RenderTransformOrigin="0.513,1.853" Margin="10,0"/>
            <TextBlock x:Name="txtEndTime" TextWrapping="Wrap" Text="End Time:" FontSize="20" Margin="10,0"/>
            <TimePicker x:Name="tmpEnd" Margin="10,0"/>
            <Button x:ConnectionId='2' x:Name="btnStart" Content="Start" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"                      Margin="10,0"/>
            <TextBlock x:Name="txtElapsedTime" TextWrapping="Wrap" Text="Elapsed Time:" FontSize="20" Margin="10,0,0,0"/>
            <TextBlock x:Name="txtTime" TextWrapping="Wrap" FontSize="15"/>
        </StackPanel>
        <TextBlock x:Name="txtHeading" HorizontalAlignment="Left" Margin="80,42,0,0" TextWrapping="Wrap" Text="Study Time" VerticalAlignment="Top" FontSize="40" Width="225"/>
        <Button x:ConnectionId='1' x:Name="btnBack" Content="Back" HorizontalAlignment="Left" Margin="10,604,0,0" VerticalAlignment="Top"                      />

    </Grid>
</Page>

