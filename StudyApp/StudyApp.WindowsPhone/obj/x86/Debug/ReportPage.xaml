<Page
    x:Class="StudyApp.ReportPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:StudyApp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Page.Background>
        <ImageBrush Stretch="Fill" ImageSource="Images/Background.jpg"/>
    </Page.Background>

    <Grid Margin="0,-26.667,0,-0.333">
        <Grid.Background>
            <ImageBrush Stretch="Fill" ImageSource="Images/Background.jpg"/>
        </Grid.Background>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="0*"/>
        </Grid.ColumnDefinitions>
        <StackPanel HorizontalAlignment="Left" Height="523" VerticalAlignment="Top" Width="370" Margin="10,85,0,0">
            <TextBlock TextWrapping="Wrap" Text="Please select report output below" FontSize="20" Margin="10,0,-1,0"/>
            <ComboBox x:ConnectionId='2' x:Name="cmbOutput"                                               Margin="10,0,-0.333,0"/>
            <TextBlock TextWrapping="Wrap" Text="Output:" FontSize="20" Margin="10,0,-0.333,0"/>
            <ListView x:Name="lsvOutput" Height="410" Margin="10,0"/>
        </StackPanel>
        <TextBlock x:Name="txtHeading" HorizontalAlignment="Right" TextWrapping="Wrap" Text="Reports" VerticalAlignment="Top" FontSize="40" Margin="0,35,124,0" Height="50" Width="156" RenderTransformOrigin="-1,0.5"/>
        <Button x:ConnectionId='1' x:Name="btnBack" Content="Back" HorizontalAlignment="Left" VerticalAlignment="Top"                       Margin="10,603,0,0" Height="58" Width="109"/>

    </Grid>
</Page>

