<Page
    x:Class="StudyApp.AddSubjects"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:StudyApp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Page.Background>
        <ImageBrush Stretch="Fill" ImageSource="Images/Background.jpg"/>
    </Page.Background>
    <Page.BorderBrush>
        <ImageBrush Stretch="Fill"/>
    </Page.BorderBrush>

    <Grid Margin="0,-26.667,0,-0.333">
        <Grid.Background>
            <ImageBrush Stretch="Fill" ImageSource="Images/Background.jpg"/>
        </Grid.Background>
        <StackPanel HorizontalAlignment="Left" Height="620" VerticalAlignment="Top" Width="380" Margin="10,10,0,0">
            <StackPanel.Background>
                <ImageBrush Stretch="Fill"/>
            </StackPanel.Background>
            <TextBlock x:Name="txtHeading1" HorizontalAlignment="Left" Margin="10,14,0,0" TextWrapping="Wrap" Text="Add Subjects" VerticalAlignment="Top" FontSize="25"/>
            <TextBlock x:Name="txtHeading" TextWrapping="Wrap" FontSize="20" Margin="10,0" Height="25" Text="Please provide the subject you are enrolled:"/>
            <TextBox x:Name="txbSubject" Margin="10,0" TextWrapping="Wrap" VerticalAlignment="Stretch"/>
            <TextBlock x:Name="txtGoal" TextWrapping="Wrap" FontSize="20" Margin="10,0" Height="26">
    			<Run Text="Goal"/>
    			<Run Text=" Mark"/>
            </TextBlock>
            <TextBox x:Name="txbGoalMark" TextWrapping="Wrap" Margin="10,0,260,0" Height="32"/>
            <Button x:ConnectionId='2' x:Name="btnAddSubject" Content="Add Subject" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Height="50"                             Margin="10,0">
                <Button.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="Black" Offset="0"/>
                        <GradientStop Color="#FF861DC1" Offset="1"/>
                    </LinearGradientBrush>
                </Button.Background>
            </Button>
            <ListBox x:Name="lstOutput" Height="384" Margin="10,0"/>
        </StackPanel>
        <Button x:ConnectionId='1' x:Name="btnBack" Content="Back" HorizontalAlignment="Left" Margin="20,609,0,0" VerticalAlignment="Top"                      />

    </Grid>
</Page>

