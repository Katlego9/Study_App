<Page
    x:Class="StudyApp.AddSubjects"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:StudyApp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Page.Background>
        <ImageBrush Stretch="Fill" ImageSource="Images/Background.jpg"/>
    </Page.Background>
    <Page.BorderBrush>
        <ImageBrush Stretch="Fill"/>
    </Page.BorderBrush>

    <Grid x:Name="appbar">
        <Grid.Background>
            <ImageBrush Stretch="Fill" ImageSource="Images/Background.jpg"/>
        </Grid.Background>
        <Grid HorizontalAlignment="Center" Height="620" Margin="10,10,10,0" VerticalAlignment="Top" Width="380">
            <TextBlock x:Name="txtHeading1" HorizontalAlignment="Center" Margin="122,18,98,0" TextWrapping="Wrap" Text="Subjects" VerticalAlignment="Top" FontSize="40" Width="160" Foreground="#FFF1E0D9"/>
            <TextBlock x:Name="txtHeading" TextWrapping="Wrap" FontSize="20" Margin="10,87,10,504" Text="Please provide the subject: " Foreground="#FFF1E0D9"/>
            <TextBox x:Name="txbSubject" Margin="10,116,10,460" TextWrapping="Wrap" VerticalAlignment="Stretch" Height="32"/>
            <TextBlock x:Name="txtGoal" HorizontalAlignment="Left" Margin="10,165,0,0" TextWrapping="Wrap" Text="Please provide goal mark:" VerticalAlignment="Top" FontSize="20" Foreground="#FFF1E0D9" Height="29"/>
            <TextBox x:Name="txbGoalMark" TextWrapping="Wrap" Margin="10,194,10,0" Height="32"/>
            <Button x:ConnectionId='1' x:Name="btnAddSubject" Content="Add Subject" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"                             Margin="7,245,7,312" BorderBrush="#FF403D39" Foreground="#FFF1E0D9" Height="50">
                <Button.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="Black" Offset="0"/>
                        <GradientStop Color="#FF936413" Offset="1"/>
                    </LinearGradientBrush>
                </Button.Background>
            </Button>
            <ListBox x:Name="lstOutput" Margin="7,345,10,10" FontSize="20"/>
            <TextBlock x:Name="txtOutput" HorizontalAlignment="Left" Margin="7,316,0,0" TextWrapping="Wrap" Text="Added subjects below:" VerticalAlignment="Top" FontSize="20" Foreground="#FFF1E0D9"/>
        </Grid>

    </Grid>
</Page>

