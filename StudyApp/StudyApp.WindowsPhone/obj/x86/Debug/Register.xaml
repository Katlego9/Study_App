<Page
    x:Class="StudyApp.Register"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:StudyApp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Page.Background>
        <ImageBrush Stretch="Fill" ImageSource="Images/Background.jpg"/>
    </Page.Background>

    <Grid>
        <Grid.Background>
            <ImageBrush Stretch="Fill" ImageSource="Images/Background.jpg"/>
        </Grid.Background>
        <Grid HorizontalAlignment="Center" Height="601" Margin="15,29,10,0" VerticalAlignment="Top" Width="375">
            <TextBlock x:Name="txtUsername" HorizontalAlignment="Left" Margin="10,109,0,0" TextWrapping="Wrap" Text="Username" VerticalAlignment="Top" FontSize="18" Foreground="#FFF1E0D9"/>
            <TextBlock x:Name="txtPassword" HorizontalAlignment="Left" Margin="10,175,0,0" TextWrapping="Wrap" Text="Password" VerticalAlignment="Top" FontSize="18" Foreground="#FFF1E0D9"/>
            <TextBlock x:Name="txtConfirm" HorizontalAlignment="Left" Margin="7,222,0,0" TextWrapping="Wrap" Text="Confirm Password" VerticalAlignment="Top" FontSize="18" Width="83" Foreground="#FFF1E0D9"/>
            <TextBox x:Name="txbUsername" HorizontalAlignment="Left" Margin="117,99,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="248"/>
            <Button x:ConnectionId='1' x:Name="btnSubmit" Content="Submit" HorizontalAlignment="Left" Margin="7,296,0,0" VerticalAlignment="Top" Width="361"                      BorderBrush="#FF403D39" Foreground="#FFF1E0D9" Height="50">
                <Button.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="Black" Offset="0"/>
                        <GradientStop Color="#FF936413" Offset="1"/>
                    </LinearGradientBrush>
                </Button.Background>
            </Button>
            <Button x:ConnectionId='2' x:Name="btnReset" Content="Reset" HorizontalAlignment="Left" Margin="8,359,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.505,0.208" Width="360"                        BorderBrush="#FF403D39" Foreground="#FFF1E0D9" Height="50">
                <Button.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="Black" Offset="0"/>
                        <GradientStop Color="#FF936413" Offset="1"/>
                    </LinearGradientBrush>
                </Button.Background>
            </Button>
            <TextBlock HorizontalAlignment="Left" Margin="117,10,0,0" TextWrapping="Wrap" Text="Register" VerticalAlignment="Top" FontSize="40" Foreground="#FFF1E0D9"/>
            <PasswordBox x:Name="pwbPass" HorizontalAlignment="Left" Margin="117,165,0,0" VerticalAlignment="Top" Width="248"/>
            <PasswordBox x:Name="pwbConfirm" HorizontalAlignment="Left" Margin="117,233,0,0" VerticalAlignment="Top" Width="248"/>
            <Grid HorizontalAlignment="Left" Height="100" Margin="283,527,-3,0" VerticalAlignment="Top" Width="100"/>
        </Grid>

    </Grid>
</Page>

