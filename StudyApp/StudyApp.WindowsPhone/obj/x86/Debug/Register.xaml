<Page
    x:Class="StudyApp.Register"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:StudyApp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Page.Background>
        <ImageBrush Stretch="Fill" ImageSource="Images/Background.jpg"/>
    </Page.Background>

    <Grid Margin="0,-26.667,0,-0.333">
        <Grid.Background>
            <ImageBrush Stretch="Fill" ImageSource="Images/Background.jpg"/>
        </Grid.Background>
        <TextBlock HorizontalAlignment="Left" Margin="99,30,0,0" TextWrapping="Wrap" Text="Study App" VerticalAlignment="Top" Height="44" Width="221" FontSize="40"/>
        <TextBlock x:Name="txtUsername" HorizontalAlignment="Left" Margin="10,142,0,0" TextWrapping="Wrap" Text="Username" VerticalAlignment="Top" FontSize="18"/>
        <TextBlock x:Name="txtPassword" HorizontalAlignment="Left" Margin="10,208,0,0" TextWrapping="Wrap" Text="Password" VerticalAlignment="Top" FontSize="18"/>
        <TextBlock x:Name="txtConfirm" HorizontalAlignment="Left" Margin="10,266,0,0" TextWrapping="Wrap" Text="Confirm Password" VerticalAlignment="Top" FontSize="18"/>
        <TextBox x:Name="txbUsername" HorizontalAlignment="Left" Margin="180,125,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="210"/>
        <Button x:ConnectionId='1' x:Name="btnSubmit" Content="Submit" HorizontalAlignment="Left" Margin="10,302,0,0" VerticalAlignment="Top" Width="380"                     >
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="0"/>
                    <GradientStop Color="#FFDE3737" Offset="1"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
        <Button x:ConnectionId='2' x:Name="btnReset" Content="Reset" HorizontalAlignment="Left" Margin="10,365,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.505,0.208" Width="380"                       >
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="0"/>
                    <GradientStop Color="#FFE8771A" Offset="1"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
        <TextBlock HorizontalAlignment="Left" Margin="16,79,0,0" TextWrapping="Wrap" Text="Register" VerticalAlignment="Top" FontSize="25"/>
        <PasswordBox x:Name="pwbPass" HorizontalAlignment="Left" Margin="180,191,0,0" VerticalAlignment="Top" Width="210"/>
        <PasswordBox x:Name="pwbConfirm" HorizontalAlignment="Left" Margin="180,249,0,0" VerticalAlignment="Top" Width="210"/>
        <Button x:ConnectionId='3' x:Name="btnBack" Content="Back" HorizontalAlignment="Left" VerticalAlignment="Top"                       Margin="41,567,0,0"/>

    </Grid>
</Page>

