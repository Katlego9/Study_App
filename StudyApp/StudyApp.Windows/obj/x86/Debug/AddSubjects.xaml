<Page
    x:Class="StudyApp.AddSubjects"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:StudyApp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Page.Background>
        <ImageBrush Stretch="Fill" ImageSource="Images/Background.jpg"/>
    </Page.Background>
    <Page.BorderBrush>
        <ImageBrush Stretch="Fill"/>
    </Page.BorderBrush>

    <Grid x:Name="appbar">
        <Grid.Background>
            <ImageBrush Stretch="Fill" ImageSource="Images/Background.jpg"/>
        </Grid.Background>
        <Grid HorizontalAlignment="Center" Height="748" Margin="0,10,20,0" VerticalAlignment="Top" Width="1346">
            <TextBlock x:Name="txtHeading1" HorizontalAlignment="Center" Margin="89,11,1097,0" TextWrapping="Wrap" Text="Subjects" VerticalAlignment="Top" FontSize="40" Width="160" Foreground="#FFF1E0D9"/>
            <TextBlock x:Name="txtHeading" TextWrapping="Wrap" FontSize="30" Margin="10,87,10,619" Text="Please provide the subject: " Foreground="#FFF1E0D9"/>
            <TextBox x:Name="txbSubject" Margin="10,134,997,582" TextWrapping="Wrap" VerticalAlignment="Stretch" Height="32"/>
            <TextBlock x:Name="txtGoal" HorizontalAlignment="Left" Margin="445,87,0,0" TextWrapping="Wrap" Text="Please provide goal mark:" VerticalAlignment="Top" FontSize="30" Foreground="#FFF1E0D9" Height="47"/>
            <TextBox x:Name="txbGoalMark" TextWrapping="Wrap" Margin="446,134,561,582" Height="32"/>
            <Button x:ConnectionId='1' x:Name="btnAddSubject" Content="Add Subject" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Height="50"                             Margin="7,208,994,490" BorderBrush="#FF403D39" Foreground="#FFF1E0D9" FontSize="20">
                <Button.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="Black" Offset="0"/>
                        <GradientStop Color="#FF936413" Offset="1"/>
                    </LinearGradientBrush>
                </Button.Background>
            </Button>
            <ListBox x:Name="lstOutput" Margin="853,134,51,10" FontSize="30"/>
            <TextBlock x:Name="txtOutput" HorizontalAlignment="Left" Margin="853,87,0,0" TextWrapping="Wrap" Text="Added subjects below:" VerticalAlignment="Top" FontSize="30" Foreground="#FFF1E0D9" Height="42"/>
            <AppBarButton x:ConnectionId='2' x:Name="appBack" HorizontalAlignment="Left" Icon="Back" Label="" Margin="-20,4,0,0" VerticalAlignment="Top"                            Height="69" Width="79" Foreground="#FFF1E0D9" BorderBrush="#FF403D39" Background="#FF936413"/>
        </Grid>

    </Grid>
</Page>

