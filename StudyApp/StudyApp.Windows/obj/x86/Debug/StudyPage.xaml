<Page
    x:Class="StudyApp.StudyPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:StudyApp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <StackPanel HorizontalAlignment="Left" Height="390" VerticalAlignment="Top" Width="390" Margin="0,78,0,0">
            <TextBlock TextWrapping="Wrap" Text="Please select the subject you want to study:" Margin="1,0,13.667,0" Height="16" FontSize="15"/>



            <ComboBox x:Name="cmbSubjects" Margin="1,0,-0.333,0" Height="53"/>
            <TextBlock x:Name="txtStartTime" HorizontalAlignment="Left" Margin="2,0,0,0" TextWrapping="Wrap" Text="Start Time:" VerticalAlignment="Top" Width="361" Height="28" FontSize="15"/>
            <TimePicker x:Name="tmpStart" RenderTransformOrigin="0.513,1.853"/>
            <TextBlock x:Name="txtEndTime" TextWrapping="Wrap" Text="End Time:" FontSize="15"/>
            <TimePicker x:Name="tmpEnd"/>
            <Button x:ConnectionId='2' x:Name="btnStart" Content="Start" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"                     />
            <TextBlock x:Name="txtElapsedTime" TextWrapping="Wrap" Text="Elapsed Time:" FontSize="15"/>
            <TextBlock x:Name="txtTime" TextWrapping="Wrap" FontSize="15"/>
        </StackPanel>
        <TextBlock x:Name="txtHeading" HorizontalAlignment="Left" Margin="0,43,0,0" TextWrapping="Wrap" Text="Study Time" VerticalAlignment="Top" FontSize="25"/>
        <Button x:ConnectionId='1' x:Name="btnBack" Content="Back" HorizontalAlignment="Left" Margin="0,-5,0,0" VerticalAlignment="Top"                      />

    </Grid>
</Page>

