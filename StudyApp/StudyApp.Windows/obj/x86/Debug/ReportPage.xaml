<Page
    x:Class="StudyApp.ReportPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:StudyApp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" Margin="10,9.333,0,-0.333">
        <StackPanel HorizontalAlignment="Left" Height="448" VerticalAlignment="Top" Width="377" Margin="0,42,0,0">
            <TextBlock TextWrapping="Wrap" Text="Select from field below:" FontSize="15" Margin="0,0,-0.333,0" Height="20"/>
            <ComboBox Margin="0,0,-0.333,0" Height="52"/>
            <TextBlock TextWrapping="Wrap" Text="Report Output" FontSize="15"/>
            <ComboBox/>
            <TextBlock TextWrapping="Wrap" Text="Output:" FontSize="15" Margin="0,0,-0.333,0"/>
            <ListBox Height="287" Margin="0,0,-0.333,0"/>
            <Button Content="Submit" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="0,0,-0.333,0" Height="17" RenderTransformOrigin="0.5,0.5"/>
        </StackPanel>
        <TextBlock x:Name="txtHeading" HorizontalAlignment="Left" TextWrapping="Wrap" Text="Reports" VerticalAlignment="Top" FontSize="25"/>

    </Grid>
</Page>

