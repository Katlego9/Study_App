<Page
    x:Class="StudyApp.ReminderPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:StudyApp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Page.Background>
        <ImageBrush Stretch="Fill" ImageSource="Images/Background.jpg"/>
    </Page.Background>

    <Grid>
        <Grid.Background>
            <ImageBrush Stretch="Fill" ImageSource="Images/Background.jpg"/>
        </Grid.Background>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid HorizontalAlignment="Center" Height="637" Margin="10,10,0,0" VerticalAlignment="Top" Width="380" Grid.ColumnSpan="2">
            <TextBlock TextWrapping="Wrap" Text="Add Reminder Description" FontSize="20" Margin="14,75,10,538"/>
            <TextBox x:Name="txbReminder" TextWrapping="Wrap" Margin="10,104,10,501" Height="32" RenderTransformOrigin="0.433,-6.125"/>
            <TextBlock TextWrapping="Wrap" Text="Please provide due date" FontSize="20" Margin="10,141,10,472"/>
            <DatePicker x:Name="dtpDate" Margin="10,170,0,419" HorizontalAlignment="Left" Width="360"/>
            <Button x:ConnectionId='1' Content="Submit" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"                      Margin="11,227,6,352">
                <Button.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="Black" Offset="0"/>
                        <GradientStop Color="#FFDBE85A" Offset="1"/>
                    </LinearGradientBrush>
                </Button.Background>
            </Button>
            <ListBox x:Name="lstOutput" Margin="11,287,9,70"/>
            <Button x:ConnectionId='2' x:Name="btnBack" Content="&lt; Prev" HorizontalAlignment="Left" Margin="7,7,0,0" VerticalAlignment="Top"                       Height="39" Width="80"/>
            <Button x:ConnectionId='3' x:Name="btnTwo" Content="View 2 Days" HorizontalAlignment="Left" Margin="7,579,0,0" VerticalAlignment="Top" Width="174" Height="45"                     >
                <Button.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="Black" Offset="0"/>
                        <GradientStop Color="#FF57E621" Offset="1"/>
                    </LinearGradientBrush>
                </Button.Background>
            </Button>
            <Button x:ConnectionId='4' x:Name="btnThree" Content="View 3 Days" HorizontalAlignment="Left" Margin="205,579,0,0" VerticalAlignment="Top" Width="165" Height="45"                       >
                <Button.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="Black" Offset="0"/>
                        <GradientStop Color="#FFE63523" Offset="1"/>
                    </LinearGradientBrush>
                </Button.Background>
            </Button>
            <TextBlock x:Name="txtHeading" HorizontalAlignment="Left" TextWrapping="Wrap" Text="Reminders" VerticalAlignment="Top" FontSize="40" Margin="114,10,0,0" Height="45" Width="180"/>
        </Grid>

    </Grid>
</Page>

