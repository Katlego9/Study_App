<Page
    x:Class="StudyApp.ReminderPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:StudyApp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Page.Background>
        <ImageBrush Stretch="Fill" ImageSource="Images/Background.jpg"/>
    </Page.Background>

    <Grid>
        <Grid.Background>
            <ImageBrush Stretch="Fill" ImageSource="Images/Background.jpg"/>
        </Grid.Background>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid HorizontalAlignment="Center" Height="748" Margin="222,10,198,0" VerticalAlignment="Top" Width="946" Grid.ColumnSpan="2">
            <TextBlock TextWrapping="Wrap" Text="Add Reminder Description" FontSize="30" Margin="10,88,504,631" Foreground="#FFF1E0D9" RenderTransformOrigin="0.458,0.532"/>
            <TextBox x:Name="txbReminder" TextWrapping="Wrap" Margin="10,135,504,581" Height="32" RenderTransformOrigin="0.433,-6.125"/>
            <TextBlock TextWrapping="Wrap" Text="Please provide due date" FontSize="30" Margin="10,190,582,509" Foreground="#FFF1E0D9"/>
            <DatePicker x:Name="dtpDate" Margin="10,239,0,459" HorizontalAlignment="Left" Width="477" FontSize="30" Height="50"/>
            <Button x:ConnectionId='1' Content="Submit" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"                      Margin="7,318,501,380" Height="50" BorderBrush="#FF403D39" Foreground="#FFF1E0D9" FontSize="20">
                <Button.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="Black" Offset="0"/>
                        <GradientStop Color="#FF936413" Offset="1"/>
                    </LinearGradientBrush>
                </Button.Background>
            </Button>
            <ListBox x:Name="lstOutput" Margin="507,135,-40,99" FontSize="20"/>
            <Button x:ConnectionId='2' x:Name="btnTwo" Content="View 2 Days" HorizontalAlignment="Left" Margin="764,679,-43,0" VerticalAlignment="Top" Width="225" Height="50"                      BorderBrush="#FF403D39" Foreground="#FFF1E0D9" FontSize="20">
                <Button.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="Black" Offset="0"/>
                        <GradientStop Color="#FF936413" Offset="1"/>
                    </LinearGradientBrush>
                </Button.Background>
            </Button>
            <Button x:ConnectionId='3' x:Name="btnThree" Content="View 3 Days" HorizontalAlignment="Left" Margin="504,679,0,0" VerticalAlignment="Top" Width="225" Height="50"                        BorderBrush="#FF403D39" Foreground="#FFF1E0D9" RenderTransformOrigin="1.137,5.511" FontSize="20">
                <Button.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="Black" Offset="0"/>
                        <GradientStop Color="#FF936413" Offset="1"/>
                    </LinearGradientBrush>
                </Button.Background>
            </Button>
            <TextBlock x:Name="txtHeading" HorizontalAlignment="Left" TextWrapping="Wrap" Text="Reminders" VerticalAlignment="Top" FontSize="40" Margin="114,14,0,0" Height="45" Width="180" Foreground="#FFF1E0D9"/>
            <AppBarButton x:ConnectionId='4' x:Name="appBack" HorizontalAlignment="Left" Icon="Back" Label="" Margin="-20,0,0,0" VerticalAlignment="Top"                            Height="69" Width="79" Background="#FF936413" Foreground="#FFF1E0D9" BorderBrush="#FF403D39"/>
            <TextBlock x:Name="txtOutput" HorizontalAlignment="Left" Margin="507,90,0,0" TextWrapping="Wrap" Text="Reminders Due:" VerticalAlignment="Top" FontSize="30" Foreground="#FFF1E0D9"/>
        </Grid>

    </Grid>
</Page>

